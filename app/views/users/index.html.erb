<% provide(:title, 'All users') %>
<h1>List of users</h1>


<%= form_tag(users_path, :method => 'get') do %>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag 'Search', class: 'btn btn-large btn-primary' %>
<%end %>

<%= will_paginate %>
<ul class="users">
  <%= render @users%>
</ul>
<%= will_paginate %>